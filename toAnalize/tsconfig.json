
{
  "compilerOptions": {
    "declaration": false,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "lib": [ "es6", "dom" ],
    "module": "esnext",
    "skipLibCheck": true,
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": false,
    "target": "ES2022",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": ".",
    "paths": {
      "@abp/*": [
        "./node_modules/abp-ng2-module/dist/src/*"
      ],
      "@app/*": [
        "./src/app/*"
      ],
      "@account/*": [
        "./src/account/*"
      ],
      "@shared/*": [
        "./src/shared/*"
      ],
      "@appshared/*": [
        "./src/app/shared/*"
      ],
      "@node_modules/*": [
        "./node_modules/*"
      ],
      "@angular/*": [
        "./node_modules/@angular/*"
      ],
      "@metronic/*": [
        "./src/assets/metronic/*"
      ],
      "@assets/*": [
        "./src/assets/*"
      ],
      "@document/*": [
        "./src/app/main/*"
      ],
      "@modules/*": [
        "./src/app/modules/*"
      ],
      "@root/*": [
        "./src/*"
      ]
    }
  },
  //"angularCompilerOptions": {
  //  "fullTemplateTypeCheck": true,
  //  "strictInjectionParameters": true
  //},
  "exclude": [ "node_modules" ]
}
